<table>
    <% var i; for (i=0; i < quizes.length; i++) { %>
        <tr>
		<td><a href="/quizes/<%= quizes[i].id %>"><%=quizes[i].pregunta%></a></td>
		<% if (session.user) { %>
			<% if (session.user.isAdmin || session.user.id === quizes[i].UserId) {%>
		
			<td><a href="/quizes/<%= quizes[i].id %>/edit"  class="button_edit">Editar</a></td>

			<td>
				<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
					<button type="submit" class="button_borrar" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
						Borrar
					</button>
				</form>
			</td>
		<% }
		} %>
	</tr>
<% } %>
</table>

<% if (session.user) { %>
	<a href="/quizes/new"><button type="button" class="button">Crear pregunta</button></a>
<% } %>
